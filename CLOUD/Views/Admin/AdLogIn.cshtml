@{
    <h1>Admins</h1>

    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>@String.Format("{0}", Html.DisplayNameFor(model => User.Id))</th>
                    <th>@($"{Html.DisplayNameFor(model => User.U_Name)}")</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>There are no admins currently.</p>
    }
}
