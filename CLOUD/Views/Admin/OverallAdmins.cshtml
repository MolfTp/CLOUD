@{
    <h1>Admins</h1>

    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>Orders</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var admin in Model)
                {
                    <tr>
                        <td>@admin.Id</td>
                        <td>@admin.Name</td>
                        <td>
                            @if (admin.Orders.Any())
                            {
                                @foreach (var order in admin.Orders)
                                {
                                    <span>@order.ProductId</span>
                                }
                            }
                            else
                            {
                                <span>No orders</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>There are no admins currently.</p>
    }
}
